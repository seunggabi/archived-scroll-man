{
  "manifest_version": 2,

  "name": "scroll-man",
  "description": "Go to the top or bottom, by one click\n한번의 클릭으로 상단 or 하단으로 이동하세요!",
  "version": "1.0.0",

  "icons": {
    "128": "images/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [
        "common/common.css"
      ],
      "js": [
        "common/jquery.min.js",
        "app.js"
      ]
    }
  ],

  "sidebar_action": {
    "default_page": "popup/index.html",
    "default_icon": {
      "128": "images/icon.png"
    },

    "default_title": "scroll-man",
    "use_navigation_bar": true
  }
}